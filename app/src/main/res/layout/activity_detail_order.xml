<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowOrderDetailActivity"
    android:background="#d6e729"
    android:id="@+id/detailOrderLayout">

    <ProgressBar
        android:id="@+id/detail_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/uiOrderDetail">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:background="#FFFFFF"
        >
    <ImageView android:id="@+id/loginlogoshowoption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logosmall"
        android:background="#FFFFFF"
        />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6E729">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailForm"
        android:layout_gravity="top|center"
        android:padding="5dp"
        android:background="#D6E729"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="DETAIL PESANAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="ID PESANAN"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/idpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="STATUS"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="TANGGAL PENJEMPUTAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tglpenjemputan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="WAKTU PENJEMPUTAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/wktpenjemputan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="ALAMAT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="INSTRUKSI KHUSUS"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/instruksikhusus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="TANGGAL PENGIRIMAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tglpengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="WAKTU PENGIRIMAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/wktpengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="BERAT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/berat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="HARGA"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="JUMLAH PAKAIAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/jumlahpakaian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="DETAIL PAKAIAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/detailpakaian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="KUALITAS LAYANAN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/kualitaslayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#41802F"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="REVIEW"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="BERI REVIEW SETELAH PESANAN SELESAI"
            android:textColor="#41802F"
            />
        <RatingBar android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RatingBar>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addReviewButton"
            android:text="TAMBAH REVIEW"
            android:padding="5dp"
            android:background="@drawable/button_bg"
            style="@style/Widget.AppCompat.Button.Colored"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</LinearLayout>