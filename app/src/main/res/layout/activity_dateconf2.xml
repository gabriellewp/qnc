<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateConfigurationActivity2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:background="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_date_range_black_24dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:text="ATUR JADWAL"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#DFED5C"
        android:weightSum="7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="10"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp">
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_navigate_before_black_24dp"
                android:layout_gravity="left"
                android:id="@+id/prevCalendar1"
                android:background="#DFED5C"
               />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="horizontal"
                android:background="#DFED5C"
                />
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_navigate_next_black_24dp"
                android:layout_gravity="right"
                android:id="@+id/nextCalendar1"
                android:layout_weight="1"
                android:background="#DFED5C"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_navigate_before_black_24dp"
                android:layout_gravity="left"
                android:id="@+id/prevHour1"
                android:background="@color/transparent"
                />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pagerhour1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="horizontal"
            android:background="@color/transparent"
            />
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_navigate_next_black_24dp"
                android:layout_gravity="right"
                android:id="@+id/nextHour1"
                android:layout_weight="1"
                android:background="@color/transparent"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/schedule1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>
            <Switch
                android:id="@+id/weekSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:text="SemingguSekali"
                android:textColor="#FFFFFF"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:id="@+id/calendar2layout"
            android:layout_marginTop="15dp">
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_navigate_before_black_24dp"
                android:layout_gravity="left"
                android:id="@+id/prevCalendar2"
                android:background="@color/transparent"
                />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="horizontal"
            android:background="@color/transparent"
            />
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_navigate_next_black_24dp"
                android:layout_gravity="right"
                android:id="@+id/nextCalendar2"
                android:background="@color/transparent"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:id="@+id/hour2layout">
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_navigate_before_black_24dp"
                android:layout_gravity="left"
                android:id="@+id/prevHour2"
                android:background="@color/transparent"
                />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pagerhour2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="8"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="horizontal"
            android:background="@color/transparent"
            />
            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_navigate_next_black_24dp"
                android:layout_gravity="right"
                android:id="@+id/nextHour2"
                android:background="@color/transparent"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/schedule2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#d6e729"
            android:layout_gravity="bottom"

            >
            <ImageButton
                android:id="@+id/prev_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_navigate_before_black_24dp"
                android:background="@drawable/round_button_bg"
                android:layout_marginLeft="20dp"
                style="@style/Widget.AppCompat.Button.Colored"
                />
            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_navigate_next_black_24dp"
                android:background="@drawable/round_button_bg"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>